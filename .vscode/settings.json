{
  "ruby.rubocop.onSave": true,
  "ruby.rubocop.useBundler": true,
  "ruby.rubocop.executePath": "$HOME/stripe/stripe-salesforce/bin/rubocop-daemon-wrapper/",
  // "editor.formatOnSaveTimeout": 1000,
  "editor.formatOnSave": true,
  "[ruby]": {
    "editor.formatOnSave": true
  },
  "[apex]": {
    // don't mess with appiphony's formatting
    "files.trimTrailingWhitespace": false,
    "files.trimFinalNewlines": false
  },
  "[javascript]": {
    "editor.formatOnSave": false,
    // don't mess with appiphony's formatting
    "files.trimTrailingWhitespace": false,
    "files.trimFinalNewlines": false
  },
  "cSpell.ignorePaths":[
    "node_modules",
    ".vscode",
    ".circleci",
    "Gemfile",
    "Gemfile.lock",
    ".rubocop*"
  ]
}